{% extends"base.html.twig" %}

{% block firstpage %}
    <section class="flex column vert-align center vidsection">
        <img class="myVideo" src="{{ asset("assets/img/city.gif") }}" alt="A">
        {#        <video autoplay muted loop class="myVideo" src="{{ asset("assets/video/city_compr.mp4") }}" type="video/mp4">#}
        {#        </video>#}
        <div class="title xLarge-12 large-12 medium-12 xSmall-12 small-12">
            <img src="{{ asset("assets/img/A.svg") }}" alt="A">
            <p><span style="font-size: 120px">{{ society.name }}</span><br><br><span style="font-size: 20px">{{
                    society.category.name
                    }}</span></p><br>
        </div>
    </section>
{% endblock %}

{% block content %}

    <section class="flex center row wrap societies">
                <div class="onlythissociety xLarge-7 large-7 medium-7 small-12 xSmall-12">
                    <img class="thesocpic" src="{{ asset('assets/img/'~society.picture) }}" alt="">
                    <p class="thesocname">{{ society.name }}</p>
                    <p class="thesocdescr">Date de création : {{ society.date|date('d/m/Y') }}</p>
                    <p class="thesocdescr">Catégorie : {{ society.category.name }}</p>
                    <p class="thesocdescr">Description : <br><span style="font-style: italic">&emsp;&emsp;{{ society
                            .description }}</span></p>

                </div>
    </section>

    <div class="fullWidth flex center">
        <button class="backhome"><a href="{{ path('home') }}">Retour à l'accueil</a></button>
    </div>
{% endblock %}